<% if (author_list.length) { %>
    <ul>
      <% author_list.forEach(function(author) { %>
        <li>
          <a href="<%= author.url %>"><%= author.name %></a>
          | (<%= author.date_of_birth %> - <%= author.date_of_death %>)
        </li>
      <% }); %>
    </ul>
  <% } else { %>
    <p>There are no authors.</p>
  <% } %>
