<h1>Genre: <%= genre.name %></h1>

<div style='margin-left:20px; margin-top:20px'>
  <h4>Books</h4>

  <% if (bookdetails.length) { %>
    <dl>
      <% bookdetails.forEach(function(book) { %>
        <dt>
          <a href="<%= book.url %>"><%= book.title %></a>
        </dt>
        <dd><%= book.summary %></dd>
      <% }); %>
    </dl>
  <% } else { %>
    <p>This genre has no books.</p>
  <% } %>
</div>
